# Auth BFF env
COGNITO_DOMAIN=https://your-domain.auth.us-east-1.amazoncognito.com
COGNITO_REGION=us-east-1
COGNITO_USER_POOL_ID=us-east-1_XXXX
COGNITO_APP_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx
# If your app client uses a secret, set it; for SPA/BFF public client leave blank
COGNITO_APP_CLIENT_SECRET=

# OIDC scopes (add resource server scopes later if you have them)
COGNITO_SCOPE=openid email profile

# Redirects
REDIRECT_URI=http://localhost:8001/auth/callback
POST_LOGIN_REDIRECT=http://localhost:5173/
POST_LOGOUT_REDIRECT=http://localhost:5173/

# Cookies
COOKIE_DOMAIN=localhost
SECURE_COOKIES=false
